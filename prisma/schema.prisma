// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  createdAt DateTime @default(now())
  items     Item[]
}

model Item {
  id          String   @id @default(cuid())
  userId      String
  rawInput    String
  sourceUrl   String?
  originalUrl String? // NEW: unmodified uploaded image
  imageUrl    String? // cleaned image after processing
  brand       String?
  name        String?
  articleType String?
  colorRaw    String?
  colorStd    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId, articleType])
  @@index([userId, colorStd])
  @@index([userId, brand])
  @@index([userId, createdAt])
}
